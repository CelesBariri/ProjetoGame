@model IEnumerable<ProjetoGame.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<h1>Nota</h1>

<p>
    <a  asp-action="Create">De sua Nota</a>
</p>
<div>
    @using (Html.BeginForm("Index", "Nota", FormMethod.Get))
    {
                    <p>
                        Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                        <input class="pesquisa" type="submit" value="Pesquisar"/>
                    </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotaValor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotaValor)
            </td>
            <td>
                <a class="botao" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="botao" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="botao" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
