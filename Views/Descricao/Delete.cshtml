@model ProjetoGame.Models.Descricao

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja excluir isto?</h3>
<div>
    <h4>Descrição</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cadastro.CadastroId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoJogo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoJogo)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="DescricaoId" />
        <input type="submit" value="Delete" class="botao" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
