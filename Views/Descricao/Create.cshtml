@model ProjetoGame.Models.Descricao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Descrição</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NotaId" class="control-label"></label>
                <select asp-for="NotaId" class ="form-control" asp-items="ViewBag.NotaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CadastroId" class="control-label"></label>
                <select asp-for="CadastroId" class ="form-control" asp-items="ViewBag.CadastroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoJogo" class="control-label"></label>
                <input asp-for="DescricaoJogo" class="form-control" />
                <span asp-validation-for="DescricaoJogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="botao"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
